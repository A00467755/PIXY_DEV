@model PIXY.Models.ImagesCategoryView

@{
    ViewData["Title"] = "Home";
}

<form asp-controller="Images" asp-action="Index" method="get">
 
    <p>
        <select asp-for="ImageCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Tag: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Images![0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images![0].ImageType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images![0].FilePathWatermark)
            </th>
            <!--
            <th>
            @Html.DisplayNameFor(model => model.Images![0].FilePath)
            </th>
            -->
            <th>
                @Html.DisplayNameFor(model => model.Images![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images![0].HaveHardcopy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Images!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageType)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.FilePathWatermark)" width="900" height="600">
            </td>
    <!--
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
                        -->
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaveHardcopy)
            </td>
            <td>

             
            <a href="/Carts/addtocart?ImageId=@Html.DisplayFor(modelItem => item.ID)" type="button">Add to cart</a>
               <!--
                        <a asp-action="Buy" asp-route-id="@item.ID">Add to Cart</a>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

               -->
            </td>
        </tr>
}
    </tbody>
</table>
